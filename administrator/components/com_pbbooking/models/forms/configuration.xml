<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="messages">
        <field name="bcc_admin" type="list" required="1" label="COM_PBBOOKING_CONFIG_BCC_ADMIN">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="notification_email" type="text" class="input-xxlarge" label="COM_PBBOOKING_CONFIG_NOTIFICATION_EMAIL" labelclass="control-label"/>
    </fieldset>

    <fieldset name="validation">
        <field name="validation" type="list" required="1" label="COM_PBBOOKING_ADMIN_VALIDATION" class="pro" labelclass="pro">
            <option value="admin">COM_PBBOOKING_ADMIN_VALIDATION_ADMIN</option>
            <option value="auto">COM_PBBOOKING_ADMIN_VALIDATION_AUTO</option>
            <option value="client">COM_PBBOOKING_ADMIN_VALIDATION_CLIENT</option>
        </field>
        <field name="validation_link_expiry" type="text" default="0" label="COM_PBBOOKING_CONFIG_VALIDATION_LINK_EXPIRY" description="COM_PBBOOKING_CONFIG_VALIDATION_LINK_EXPIRY_DESC" class="pro" labelclass="pro"/>
    </fieldset>

    <fieldset name="view">
        <field name="time_increment" type="text" required="1" class="input-mini" label="COM_PBBOOKING_CONFIG_TIMEINCREMENT" labelclass="control-label"/>
        <field name="show_link" type="list" required="1" label="COM_PBBOOKING_CONFIG_SHOW_LINK">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="show_prices" type="list" required="1" label="COM_PBBOOKING_CONFIG_SHOW_PRICES">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="calendar_start_day" type="list" required="1" label="COM_PBBOOKING_CONFIG_START_DAY" labelclass="control-label">
            <option value="0">SUNDAY</option>
            <option value="1">MONDAY</option>
            <option value="2">TUESDAY</option>
            <option value="3">WEDNESDAY</option>
            <option value="4">THURSDAY</option>
            <option value="5">FRIDAY</option>
            <option value="6">SATURDAY</option>
        </field>
        <field name="show_busy_front_end" type="list" required="1" label="COM_PBBOOKING_CONFIG_SHOWBUSYFRONTEND" labelclass="control-label">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="manage_fields" type="list" label="COM_PBBOOKING_CONFIG_FIELDS_IN_MANAGE_DIARIES" multiple="true" multiselect="true" labelclass="control-label">
        </field>
        <field name="enable_shifts" type="list" label="COM_PBBOOKING_CONFIG_ENABLE_SHIFTS" labelclass="control-label">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>   
        <field name="currency_symbol_before" type="list" label="COM_PBBOOKING_CONFIG_CURRENCY_SYMBOL_POSITON" labelclass="control-label">
            <option value="1">COM_PBBOOKING_CONFIG_CURRENCY_SYMBOL_BEFORE</option>
            <option value="0">COM_PBBOOKING_CONFIG_CURRENCY_SYMBOL_AFTER</option>
        </field>

        <field name="multi_page_checkout" type="list" label="COM_PBBOOKING_CONFIG_CHECKOUT_STYLE" labelclass="control-label">
            <option value="1">COM_PBBOOKING_CONFIG_CHECKOUT_STYLE_1</option>
            <option value="0">COM_PBBOOKING_CONFIG_CHECKOUT_STYLE_0</option>
        </field>
        <field name="single_page_block_days_master_trading_hours" type="list" label="COM_PBBOOKING_CONFIG_SINGLE_PAGE_BLOCK_DAYS_MASTER_TRADING_HOURS" labelclass="control-label">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="disable_announcements" type="list" label="COM_PBBOOKING_CONFIG_DISABLE_ANNOUNCEMENTS" labelclass="control-labels">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="prevent_bookings_within" type="text" class="input-mini" label="COM_PBBOOKING_PREVENT_BOOKING_WITHIN" labelclass="control-label"/>
        <field name="allow_booking_max_days_in_advance" type="text" class="input-mini" label="COM_PBBOOKING_ALLOW_BOOKING_MAX_DAYS_IN_ADVANCE" labelclass="control-label"/>
        <field name="disable_pending_bookings" type="text" class="input-mini" label="COM_PBBOOKING_DISABLE_PENDING_BOOKING" labelclass="control-label"/>
        <field name="select_calendar_individual" type="list" label="COM_PBBOOKING_SELECT_CALENDAR_INDIVIDUAL_LABEL" labelclass="control-label">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="calendar_color" type="color" class="input-mini" label="COM_PBBOOKING_SELECT_CALENDAR_HEADER_COLOUR" labelclass="control-label"/>
        <field name="enable_recaptcha" type="list" required="1" label="COM_PBBOOKING_ENABLE_RECAPTCHA" labelclass="control-label">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>



    </fieldset>

    <fieldset name="integrations">
        <field name="enable_cron" type="list" label="COM_PBBOOKING_ENABLE_CRON" labelclass="control-label pro" class="pro">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>


        <field name="enable_selfservice" type="list" label="COM_PBBOOKING_SELFSERVICE_ENABLE" labelclass="control-label pro" class="pro">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="self_service_change_notice" type="text" class="input-mini pro" label="COM_PBBOOKING_SELFSERVICE_HOURS_NOTICE" labelclass="control-label pro"/>
        <field name="display_past_appointments" type="list" label="COM_PBBOOKING_SELFSERVICE_DISPLAY_PAST_APPOINTMENTS" labelclass="control-label pro" class="pro">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>

    <fieldset name="googlecalendar">
        <field name="enable_google_cal" type="list" label="COM_PBBOOKING_CALENDAR_CONFIGURATION_ENABLE_GOOGLE_CAL" labelclass="control-label pro" class="pro">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="sync_future_events" type="list" label="COM_PBBOOKING_CONFIG_SYNC_FUTURE_EVENTS" labelclass="control-label pro" class="pro">
            <option value="0">COM_PBBOOKING_CONFIG_SYNC_FUTURE_EVENTS_0</option>
            <option value="1">COM_PBBOOKING_CONFIG_SYNC_FUTURE_EVENTS_1</option>
            <option value="2">COM_PBBOOKING_CONFIG_SYNC_FUTURE_EVENTS_2</option>
            <option value="3">COM_PBBOOKING_CONFIG_SYNC_FUTURE_EVENTS_3</option>
            <option value="4">COM_PBBOOKING_CONFIG_SYNC_FUTURE_EVENTS_4</option>
            <option value="5">COM_PBBOOKING_CONFIG_SYNC_FUTURE_EVENTS_5</option>
            <option value="6">COM_PBBOOKING_CONFIG_SYNC_FUTURE_EVENTS_6</option>
        </field>
        <field name="sync_google_events_to_pbbooking" type="list" label="COM_PBBOOKING_CONFIG_SYNC_DIRECTION" labelclass="control-label pro" class="pro">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="google_cal_sync_secret" type="text" class="input-xxlarge pro" label="COM_PBBOOKING_GOOGLE_CAL_SYNC_SECRET" labelclass="control-label pro"/>
        <field name="google_max_results" type="text" class="input-mini pro" label="COM_PBBOOKING_GOOGLE_CAL_MAX_RESULTS" labelclass="control-label pro" default="500"/>
        <field name="authcode" type="text" class="input-xxlarge" label="COM_PBBOOKING_CAL_GCAL_AUTHCODE" labelclass="control-label"/>
        <field name="authUrl" type="hidden"/>
    </fieldset>



    <fieldset name="advanced">
        <field name="enable_multilanguage" type="list" label="COM_PBBOOKING_ENABLE_MULTILANGUAGE" labelclass="control-label">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="user_offset" type="list" label="COM_PBBOOKING_CONVERT_USER_OFFSET" labelclass="control-label">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="booking_details_template" type="textarea" class="input-xxlarge" label="COM_PBBOOKING_MESSAGE_BOOKING_DETAILS_TABLE" labelclass="control-label" rows="10"/>

    </fieldset>

    <fieldset name="hidden">
        <field name="id" type="hidden"/>
        <field name="trading_hours" type="hidden"/>
        <field name="time_groupings" type="hidden"/>
        <field name="reminder_settings" type="hidden"/>
        <field name="testimonial_questions" type="hidden"/>

    </fieldset>

  
</form>
